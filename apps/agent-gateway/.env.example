# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Rentman Agent Gateway - Environment Variables Template
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# ⚠️  PRODUCTION WARNING:
# DO NOT use .env files in production. Use Google Cloud Secret Manager.
# This file is for LOCAL DEVELOPMENT ONLY.
#
# Setup Instructions:
# 1. Copy this file to .env
# 2. Fill in the actual values
# 3. Set USE_LOCAL_SECRETS=true for development
# 4. NEVER commit .env to Git
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Google Cloud Project
GCP_PROJECT_ID=agent-gen-1

# Secret Management Mode
# Set to 'true' for local development to use .env file
# Set to 'false' or omit for production to use Secret Manager
USE_LOCAL_SECRETS=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Secrets (Only for local development)
# In production, these are loaded from Google Cloud Secret Manager
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Supabase Configuration
SUPABASE_URL=https://uoekolfgbbmvhzsfkjef.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# Stripe API Keys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=
API_KEY_ENCRYPTION_SECRET=
API_KEY_SECRET=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600000

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# MCP (Model Context Protocol)
MCP_ENABLED=true
MCP_PORT=3002

# Monitoring (Optional)
SENTRY_DSN=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Production Deployment with Secret Manager
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# Secrets are shared with Backend via Google Cloud Secret Manager:
# - SUPABASE_URL
# - SUPABASE_SERVICE_ROLE_KEY  
# - STRIPE_SECRET_KEY
