'use client';

import { useState, useEffect } from 'react';
import { supabase } from '@/lib/supabase'; // Keep for direct calls if needed, or replace with useAuth
import { useAuth } from '@/contexts/AuthContext';
import { useRouter } from 'next/navigation';
import { useLanguage } from '@/contexts/LanguageContext';
import { format } from 'date-fns';
import { es } from 'date-fns/locale';
import toast from 'react-hot-toast';
import {
  SunIcon,
  ArrowRightIcon,
  SparklesIcon,
  CheckIcon,
  FlameIcon,
  PlusIcon,
  BarChart2Icon,
  MessageSquareIcon,
  SettingsIcon
} from 'lucide-react';

import WellnessCompanion from '@/components/WellnessCompanion';
import WellnessCheckIn from '@/components/WellnessCheckIn';
import SmartNudging from '@/components/SmartNudging';
import CreateHabitModal from '@/components/CreateHabitModal';
import GoalWizardModal from '@/components/GoalWizardModal';
// import FloatingAddButton from '@/components/FloatingAddButton';
// import CalendarConnect from '@/components/CalendarConnect';
import { useTheme } from '@/contexts/ThemeContext';
import { celebrate, microCelebrate } from '@/lib/confetti';

interface Habit {
  id: string;
  name: string;
  type: 'build' | 'quit';
  emoji: string;
  category: string;
  tiny_version: string;
  current_streak: number;
  best_streak: number;
  trigger_time: string | null;
  completed_today?: boolean;
  points?: number;
}

interface HabitLog {
  id: string;
  completed_at: string;
}


export default function HabitsPage() {
  const { t } = useLanguage();
  const { user, loading: authLoading } = useAuth();
  const { isDark: darkMode } = useTheme();
  const router = useRouter();

  const [habits, setHabits] = useState<Habit[]>([]);
  const [loading, setLoading] = useState(true);
  const [showCreateModal, setShowCreateModal] = useState(false);
  const [completingId, setCompletingId] = useState<string | null>(null);
  const [showCelebration, setShowCelebration] = useState<string | null>(null);
  const [stats, setStats] = useState({ total: 0, completed: 0, streak: 0, pending: 0 });
  const [gamification, setGamification] = useState({
    current_xp: 0,
    current_level: 1,
    current_health: 100,
    form_stage: 'spark' as any
  });

  // Auth protection
  useEffect(() => {
    if (!authLoading && !user) {
      router.push('/auth');
    } else if (user) {
      // Check onboarding status
      supabase
        .from('sarah_user_profiles')
        .select('onboarding_completed')
        .eq('user_id', user.id)
        .single()
        .then(({ data }) => {
          if (data && data.onboarding_completed === false) {
            router.replace('/onboarding');
          }
        });
    }
  }, [user, authLoading, router]);

  useEffect(() => {
    loadHabits();

    // Listen for Voice Agent commands
    const handleVoiceOpenModal = (e: CustomEvent) => {
      console.log('üé§ Voice command received:', e.detail);
      setShowCreateModal(true);
    };

    window.addEventListener('open_habit_creator', handleVoiceOpenModal as any);
    window.addEventListener('habits_updated', loadHabits);
    window.addEventListener('badge_awarded', ((e: CustomEvent) => {
      setShowCelebration(e.detail?.reason || 'Badge Unlocked!');
      setTimeout(() => setShowCelebration(null), 3000);
    }) as EventListener);

    // Check gamification on load and when habits change
    loadGamification();
    window.addEventListener('gamification_updated', loadGamification);

    return () => {
      window.removeEventListener('open_habit_creator', handleVoiceOpenModal as any);
      window.removeEventListener('habits_updated', loadHabits);
      window.removeEventListener('badge_awarded', (() => { }) as EventListener);
      window.removeEventListener('gamification_updated', loadGamification);
    };
  }, []);

  const loadHabits = async () => {
    setLoading(true);
    try {
      if (!user) return; // Should be handled by effect, but guard for safety

      const todayStart = new Date();
      todayStart.setHours(0, 0, 0, 0);

      const { data: habitsData, error } = await supabase
        .from('habits')
        .select(`
          id, name, type, emoji, category, tiny_version, current_streak, best_streak, trigger_time,
          habit_logs!left (id, completed_at)
        `)
        .eq('user_id', user.id)
        // .eq('status', 'active') 
        .order('trigger_time', { ascending: true, nullsFirst: false });

      if (error) throw error;

      const habitsWithStatus = (habitsData || []).map((h: any) => ({
        ...h,
        completed_today: h.habit_logs?.some((log: HabitLog) =>
          new Date(log.completed_at) >= todayStart
        ) || false
      }));

      setHabits(habitsWithStatus);

      const completed = habitsWithStatus.filter((h: Habit) => h.completed_today).length;
      const totalStreak = habitsWithStatus.reduce((sum: number, h: Habit) => sum + h.current_streak, 0);

      setStats({
        total: habitsWithStatus.length,
        completed,
        streak: totalStreak,
        pending: habitsWithStatus.length - completed
      });
    } catch (error) {
      console.error('Error loading habits:', error);
      toast.error('Error loading habits');
    } finally {
      setLoading(false);
    }
  };

  const loadGamification = async () => {
    try {
      if (!user) return;

      // 1. Try LocalStorage first (Optimistic Load) - CLIENT SIDE ONLY
      if (typeof window !== 'undefined') {
        const localData = localStorage.getItem(`gamification_${user.id}`);
        if (localData) {
          setGamification(JSON.parse(localData));
        }
      }

      // 2. Try DB (Background sync)
      const { data, error } = await supabase
        .from('gamification_state')
        .select('*')
        .eq('user_id', user.id)
        .single();

      if (data) {
        const newState = {
          current_xp: data.current_xp,
          current_level: data.current_level,
          current_health: data.current_health,
          form_stage: (data.form_stage as any) || 'spark'
        };
        setGamification(newState);
        if (typeof window !== 'undefined') {
          localStorage.setItem(`gamification_${user.id}`, JSON.stringify(newState));
        }
      } else if (error) {
        // Default if nothing works
        console.warn('Could not load gamification, using default');
      }
    } catch (e) {
      console.warn('Error loading gamification (using local/default)', e);
    }
  };


  const calculateXP = (habit: Habit) => {
    // 1. Logic for "Little XP" for Water/Small tasks
    const name = habit.name.toLowerCase();
    const cat = habit.category.toLowerCase();

    // Specific user requests
    if (name.includes('water') || name.includes('agua') || name.includes('vaso')) return 3; // Little XP

    // Core Wellness Pillars (High Value)
    if (name.includes('exercise') || name.includes('workout') || name.includes('gym') || name.includes('ejercicio') || name.includes('entrenar')) return 20;
    if (name.includes('sleep') || name.includes('dormir') || name.includes('descanso')) return 15;
    if (name.includes('food') || name.includes('eat') || name.includes('comida') || name.includes('meal') || name.includes('nutricion')) return 10;

    // Category Defaults
    if (cat === 'health') return 15;
    if (cat === 'learning') return 15;
    if (cat === 'productivity') return 12;

    return 10; // Standard Default
  };

  const completeHabit = async (habitId: string, habitName: string, habitObj: Habit) => {
    setCompletingId(habitId);
    try {
      if (!user) return;

      const xpEarned = calculateXP(habitObj);

      await supabase.from('habit_logs').insert({
        habit_id: habitId,
        user_id: user.id,
        day_of_week: new Date().getDay() || 7,
        completed_at: new Date().toISOString()
      });

      const { data: habit } = await supabase
        .from('habits')
        .select('current_streak, best_streak, total_completions, last_completed_at')
        .eq('id', habitId)
        .single();

      if (habit) {
        const now = new Date();
        const lastCompleted = habit.last_completed_at ? new Date(habit.last_completed_at) : null;
        let newStreak = 1;

        if (lastCompleted) {
          const daysDiff = Math.floor((now.getTime() - lastCompleted.getTime()) / (1000 * 60 * 60 * 24));
          if (daysDiff <= 1) {
            newStreak = habit.current_streak + 1;
          }
        }

        await supabase
          .from('habits')
          .update({
            current_streak: newStreak,
            best_streak: Math.max(newStreak, habit.best_streak),
            total_completions: (habit.total_completions || 0) + 1,
            last_completed_at: now.toISOString()
          })
          .eq('id', habitId);

        // TRIGGER GAMIFICATION UPDATE (Optimistic + RPC)

        // 1. Optimistic Update (Instant feedback)
        let newXP = gamification.current_xp + xpEarned;
        let newLevel = Math.floor(newXP / 100) + 1;
        let newStage = gamification.form_stage;

        // Simple stage logic mirroring backend
        if (newLevel >= 50) newStage = 'solar_spirit';
        else if (newLevel >= 20) newStage = 'mystic_fire';
        else if (newLevel >= 5) newStage = 'flame';

        const optimState = {
          ...gamification,
          current_xp: newXP,
          current_level: newLevel,
          form_stage: newStage
        };

        setGamification(optimState);
        if (user && typeof window !== 'undefined') {
          localStorage.setItem(`gamification_${user.id}`, JSON.stringify(optimState));
        }

        // 2. Background RPC Sync
        try {
          await supabase.rpc('update_gamification_stats', {
            p_user_id: user.id,
            p_xp_delta: xpEarned,
            p_hp_delta: 0
          });
          // We rely on optimistic state, no need to force reload immediately if RPC fails
        } catch (rpcError) {
          console.warn('Gamification RPC failed (using local optimistic state):', rpcError);
        }

        // Show celebration
        setShowCelebration(habitName);
        toast.success(`+${xpEarned} XP üéâ`);
        setTimeout(() => setShowCelebration(null), 2500);
      }

      await loadHabits();
    } catch (error) {
      console.error('Error completing habit:', error);
      toast.error('Error completing habit');
    } finally {
      setCompletingId(null);
    }
  };

  const getCategoryStyle = (category: string) => {
    const styles: Record<string, { bg: string; text: string }> = {
      health: { bg: 'bg-green-100 dark:bg-green-900/30', text: 'text-green-700 dark:text-green-300' },
      productivity: { bg: 'bg-blue-100 dark:bg-blue-900/30', text: 'text-blue-700 dark:text-blue-300' },
      learning: { bg: 'bg-purple-100 dark:bg-purple-900/30', text: 'text-purple-700 dark:text-purple-300' },
      finance: { bg: 'bg-yellow-100 dark:bg-yellow-900/30', text: 'text-yellow-700 dark:text-yellow-300' },
      social: { bg: 'bg-pink-100 dark:bg-pink-900/30', text: 'text-pink-700 dark:text-pink-300' },
      general: { bg: 'bg-gray-100 dark:bg-gray-800', text: 'text-primary-global dark:text-muted-global' }
    };
    return styles[category] || styles.general;
  };

  const getDynamicGreeting = () => {
    const hour = new Date().getHours();
    const name = user?.user_metadata?.name || user?.email?.split('@')[0] || 'Champion';
    // Capitalize name
    const capName = name.charAt(0).toUpperCase() + name.slice(1);

    if (hour < 12) return `Good morning, ${capName}!`;
    if (hour < 18) return `Good afternoon, ${capName}!`;
    return `Good evening, ${capName}!`;
  };

  const sarahMessage = () => {
    if (stats.total > 0 && stats.completed === stats.total) return "BOOM! All done. You're a legend. üèÜ";
    if (stats.completed > 0) return `Going great! ${stats.pending} more to crush it. üí™`;
    if (stats.streak > 7) return `You're on fire! ${stats.streak} day streak! üî•`;
    return "Shall we start? Today is your day. ‚ú®";
  };

  if (authLoading || (loading && user)) {
    return (
      <div className="min-h-screen p-4 flex items-center justify-center" style={{ backgroundColor: 'var(--sarah-bg)' }}>
        <div className="animate-spin rounded-full h-12 w-12 border-4 border-[var(--sarah-primary)] border-t-transparent"></div>
      </div>
    );
  }

  if (!user) return null; // Prevent flash while redirecting

  // Stitch V2 Render
  if (authLoading || (loading && user)) {
    return (
      <div className="min-h-screen p-4 flex items-center justify-center bg-background-light dark:bg-background-dark">
        <div className="animate-spin rounded-full h-12 w-12 border-4 border-primary border-t-transparent"></div>
      </div>
    );
  }

  if (!user) return null;

  return (
    <div className="min-h-screen pb-32 bg-background text-foreground selection:bg-pink-500 selection:text-white font-sans transition-colors duration-300">

      {/* Header / Status Card */}
      <div className="px-5 pt-8">
        <div className="relative group">
          {/* Glowing Gradient Border Effect */}
          <div className="absolute -inset-0.5 bg-gradient-to-r from-orange-400 via-pink-500 to-purple-600 rounded-[2.2rem] opacity-100 blur-[1px]"></div>

          <div className={`relative rounded-[2rem] p-6 flex flex-col gap-5 ${darkMode ? 'bg-[#0f0f11]' : 'bg-white'}`}>
            {/* Header */}
            <div className="flex items-center gap-5">
              {/* Tamagotchi Avatar */}
              <div className="relative" onClick={() => router.push('/sarah')}>
                <div className="w-20 h-20 rounded-full bg-gradient-to-b from-orange-200 to-pink-200 flex items-center justify-center p-1 shadow-inner shadow-orange-500/20 ring-4 ring-white/10">
                  {/* Using the specific Avatar URL from the HTML reference */}
                  <img
                    src="https://api.dicebear.com/9.x/avataaars/svg?seed=Sarah&backgroundColor=transparent"
                    alt="Sarah Avatar"
                    className="w-14 h-14 translate-y-1"
                  />
                </div>
                <div className="absolute -bottom-1 -right-1 bg-white/10 backdrop-blur-md px-2 py-0.5 rounded-full border border-white/20">
                  <span className={`text-xs font-semibold tracking-wide ${darkMode ? 'text-white' : 'text-gray-900'}`}>Lvl {gamification.current_level}</span>
                </div>
              </div>

              <div className="flex flex-col gap-1">
                <h1 className={`text-3xl font-semibold tracking-tight ${darkMode ? 'text-white' : 'text-gray-900'}`}>
                  {getDynamicGreeting()}
                </h1>
                <p className={`text-base font-medium leading-tight ${darkMode ? 'text-gray-400' : 'text-gray-600'}`}>
                  {sarahMessage()}
                </p>
              </div>
            </div>

            {/* Progress Bar */}
            <div className="flex flex-col gap-2 mt-1">
              <div className="flex justify-between items-end">
                <span className={`text-sm font-semibold ${darkMode ? 'text-gray-300' : 'text-gray-700'}`}>Spark</span>
                <span className={`text-sm font-semibold ${darkMode ? 'text-gray-500' : 'text-gray-400'}`}>{gamification.current_xp % 100}%</span>
              </div>
              <div className={`h-2 w-full rounded-full overflow-hidden ${darkMode ? 'bg-gray-800/50' : 'bg-gray-200'}`}>
                <div
                  className={`h-full rounded-full transition-all duration-500 ${darkMode ? 'bg-slate-700' : 'bg-gradient-to-r from-orange-400 to-pink-500'}`}
                  style={{ width: `${(gamification.current_xp % 100)}%` }}
                ></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Morning Check-in Banner */}
      <section className="px-5 mt-6">
        <WellnessCheckIn />
      </section>

      {/* Habits Section */}
      <section className="px-5 mt-10">
        <div className="flex items-center gap-2 mb-5">
          <SparklesIcon className="text-orange-400 w-5 h-5" />
          <h2 className={`text-2xl font-semibold tracking-tight ${darkMode ? 'text-white' : 'text-gray-900'}`}>Today&apos;s Habits</h2>
        </div>

        <div className="flex flex-col gap-4">
          {habits.length === 0 ? (
            <div className={`text-center py-10 ${darkMode ? 'text-gray-500' : 'text-gray-400'}`}>
              <p>No habits yet. Create one!</p>
            </div>
          ) : (
            habits.map((habit) => (
              <div
                key={habit.id}
                onClick={() => !habit.completed_today && completeHabit(habit.id, habit.name, habit)}
                className={`
                  group border rounded-[2rem] p-5 flex items-center justify-between transition-colors
                  ${habit.completed_today
                    ? darkMode
                      ? 'bg-[#121214]/50 border-emerald-500/20 opacity-70'
                      : 'bg-green-50 border-emerald-500/30 opacity-80'
                    : habit.type === 'quit'
                      ? darkMode
                        ? 'bg-[#121214] border-red-500/20 hover:border-red-500/40'
                        : 'bg-red-50/50 border-red-500/20 hover:border-red-500/40'
                      : darkMode
                        ? 'bg-[#121214] border-white/5 active:bg-[#1a1a1c]'
                        : 'bg-white border-gray-200 active:bg-gray-50'
                  }
                `}
              >
                <div className="flex items-center gap-4">
                  <div className={`
                    w-14 h-14 rounded-2xl flex items-center justify-center text-2xl
                    ${habit.completed_today
                      ? darkMode
                        ? 'bg-emerald-500/20 text-emerald-500'
                        : 'bg-emerald-100 text-emerald-600'
                      : habit.type === 'quit'
                        ? darkMode
                          ? 'bg-red-500/10 text-red-500'
                          : 'bg-red-100 text-red-600'
                        : darkMode
                          ? 'bg-[#1e1e24] text-white'
                          : 'bg-gray-100 text-gray-900'}
                  `}>
                    {habit.completed_today
                      ? (habit.type === 'quit' ? "üõ°Ô∏è" : <CheckIcon className="w-7 h-7" />)
                      : habit.emoji}
                  </div>
                  <div className="flex flex-col gap-0.5">
                    <div className={`flex items-center gap-2 text-xs font-semibold uppercase tracking-wide ${darkMode ? 'text-gray-500' : 'text-gray-400'}`}>
                      <span className={habit.type === 'quit' ? 'text-red-400' : ''}>{habit.type === 'quit' ? 'AVOID' : habit.category}</span>
                      {habit.trigger_time && (
                        <>
                          <span className={`w-1 h-1 rounded-full ${darkMode ? 'bg-gray-600' : 'bg-gray-400'}`}></span>
                          <span>{habit.trigger_time.slice(0, 5)}</span>
                        </>
                      )}
                    </div>
                    <h3 className={`text-lg font-semibold ${habit.completed_today ? 'text-emerald-500 line-through' : darkMode ? 'text-white' : 'text-gray-900'}`}>
                      {habit.name}
                    </h3>
                    <p className={`text-sm font-medium truncate max-w-[150px] ${darkMode ? 'text-gray-500' : 'text-gray-400'}`}>
                      {habit.tiny_version || 'No tiny version'}
                    </p>
                  </div>
                </div>
                <div className="flex flex-col items-center gap-0.5 pr-1">
                  <FlameIcon className={`w-6 h-6 ${habit.current_streak > 0 ? 'text-orange-500' : darkMode ? 'text-gray-600' : 'text-gray-300'}`} />
                  <span className={`text-lg font-semibold ${habit.current_streak > 0 ? darkMode ? 'text-white' : 'text-gray-900' : darkMode ? 'text-gray-500' : 'text-gray-400'}`}>
                    {habit.current_streak}
                  </span>
                  <span className={`text-[10px] font-semibold uppercase ${darkMode ? 'text-gray-600' : 'text-gray-400'}`}>Days</span>
                </div>
              </div>
            ))
          )}
        </div>
      </section>

      {/* Smart Nudging */}
      <section className="px-5 mt-10 pb-10">
        <SmartNudging />
      </section>

      {/* Floating Action Button Removed - Use Sarah Screen for Creation */}

      {/* Mic Button Note: Controlled by SarahFloatingButton/EmbeddedVoice globally */}
      {/* Sarah Voice Agent Removed - Accessed via Route /sarah only */}

      {/* Bottom Navigation Removed - Uses Global Component */}

      {/* Create Modal (Goal Wizard Architecture) */}
      {showCreateModal && (
        <GoalWizardModal
          onClose={() => setShowCreateModal(false)}
          onCreated={loadHabits}
          darkMode={darkMode}
        />
      )}
    </div>
  );

}

// End of HabitsPage




